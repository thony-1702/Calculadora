<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_main"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="CALCULADORA"
        android:textColor="#141313"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Resultado -->
    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="RESULTADO"
        android:textColor="#666262"
        android:textSize="30sp" />

    <!-- Fila 1: 7 8 9 / -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="7"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="8"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="9"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_divicion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="/"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <!-- Fila 2: 4 5 6 X -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="4"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="5"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="6"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_multiplicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="X"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <!-- Fila 3: 1 2 3 - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="1"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="2"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="3"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_resta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="-"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <!-- Fila 4: ← 0   + -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_borrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="←"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:backgroundTint="#673AB7"
            android:text="0"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_suma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="+"
            android:textSize="40sp"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</LinearLayout>
